            }else{
                echo "(<a href='".$this->url(array('module' => 'home',
    'controller' => 'play',
    'action' => 'unequip', 'id'=>$inventory->item_id()), 'default', true)."'>Des√©quiper</a>)";
            }
        
        }else{
            if($inventory->type()=="Consumable"){
